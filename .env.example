# Project Agent Environment Variables
# Copy this file to .env and fill in your values

# Required
GITHUB_TOKEN=your_github_personal_access_token
MINIMAX_API_KEY=your_minimax_m2.1_api_key

# Optional - Other LLM providers (if not using MiniMax)
# OPENAI_API_KEY=your_openai_api_key
# OPENAI_MODEL=gpt-4o

# Optional - Telegram Bot (recommended for commands)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=your_webhook_url_if_using_webhooks

# Optional - Slack Bot
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_SIGNING_SECRET=your_slack_signing_secret

# Optional - Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token

# Optional - Configuration Override
CONFIG_PATH=config.yaml

# Optional - Database (override default)
DATABASE_PATH=data/project_agent.db

# Optional - Logging
LOG_LEVEL=INFO
DEBUG=false
